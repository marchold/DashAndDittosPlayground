<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:id="@+id/review_me_dialog_root">
  
 
<RelativeLayout   android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:id="@+id/titleArea"
  android:layout_centerHorizontal="true"
  >
  
<ImageView  android:src="@drawable/numbers__stars_red01" android:id="@+id/ImageView01" android:layout_width="wrap_content" android:layout_height="wrap_content"></ImageView>
<TextView  android:layout_width="wrap_content" android:text="@string/buyNow" android:id="@+id/titleText" android:layout_toRightOf="@+id/ImageView01" android:layout_height="wrap_content" android:textSize="24sp"></TextView>
<ImageView  android:layout_toRightOf="@+id/titleText" android:src="@drawable/numbers__stars_red01" android:id="@+id/ImageView02" android:layout_width="wrap_content" android:layout_height="wrap_content"></ImageView>

</RelativeLayout>


<TextView android:layout_width="wrap_content" 
          android:id="@+id/getThemMessage" 
          android:layout_below="@+id/titleArea" 
          android:layout_height="wrap_content" 
          android:text="@string/unlockWithReview" android:textSize="20sp"></TextView>




<RelativeLayout   android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:id="@+id/buttonArea"
  android:layout_centerHorizontal="true"
  android:layout_below="@+id/getThemMessage" 
  >

<Button android:layout_width="wrap_content" android:text="@string/noThanksButton" android:id="@+id/noThanksButton" android:layout_height="wrap_content" android:layout_toRightOf="@+id/BuyNowButton" android:textSize="20sp"></Button>


<Button android:layout_toRightOf="@+id/noThanksButton" android:layout_width="wrap_content" android:id="@+id/reviewTheApp" android:layout_below="@+id/getThemMessage" android:layout_height="wrap_content"  android:text="@string/reviewButton" android:textSize="22sp"></Button>
</RelativeLayout>
</RelativeLayout>
